@model RenderingModel
<ul>
    @{
        var productRootId = "{3A9EEDAA-4DCE-4123-8503-393AE0E7809A}";
        var productRootItem = Sitecore.Context.Database.GetItem(productRootId);
    }

    @foreach (var item in productRootItem.Children.ToArray())
    {
        if (@item["Show in Menu"] == "1")
        {
            <li>
                <a href="@Sitecore.Links.LinkManager.GetItemUrl(@item)">
                    @item["Title"]
                </a>
            </li>
        }
    }
</ul>


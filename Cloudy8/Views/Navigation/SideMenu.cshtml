@model RenderingModel

@{
    var productRootId = "{38B15ED7-200E-43BB-BA5F-A4DDB525501F}";
    var productRootItem = Sitecore.Context.Database.GetItem(productRootId);
}
    <h2>What's New?</h2>
    @foreach (var item in productRootItem.Children.ToArray())
    {
        <h3>@item.Name</h3>
        <p>
            @item["Blurb"]
        <a href="@Sitecore.Links.LinkManager.GetItemUrl(@item)"> More... </a>
        </p>
    }

